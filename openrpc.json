        }
      }
    ],
    "components": {
      "schemas": {
        "Account": {
          "required": [
            "address",
            "hardware",
            "is_hidden"
          ],
          "properties": {
            "address": {
              "type": "string"
            },
            "hardware": {
              "type": "boolean"
            },
            "name": {
              "required": false,
              "type": "string"
            },
            "description": {
              "required": false,
              "type": "string"
            },
            "is_hidden": {
              "type": "boolean"
            },
            "tag": {
              "type": "string"
            }
          }
        },
        "Accounts": {
          "type": "array",
          "items": {
            "$ref": "#/components/schemas/Account"
          }
        }
      }
    }
}