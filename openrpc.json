{
    "openrpc": "1.0.0",
    "info": {
      "version": "1.0.0",
      "title": "OpenRPC Petstore",
      "license": {
        "name": "Apache-2"
      }
    },
    "servers": [
      {
        "url": "http://localhost:1920"
      }
    ],
    "methods": [
      {
        "name": "emerald_heartbeat",
        "summary": "Check service health",
        "tags": [
          "jade"
        ],
        "params": [],
        "result": {
          "description": "`timestamp` (Number) - Seconds since Jan 01 1970 (UTC)",
          "type": "integer",
          "format": "int64"
        }
      },
      {
        "name": "emerald_currentVersion",
        "summary": "Check service health",
        "tags": [
          "jade"
        ],
        "params": [],
        "result": {
          "description": "Current version according semantic versioning",
          "type": "string"
        }
      },
      {
        "name": "emerald_listAccounts",
        "summary": "Return the list of all not hidden (by default) accounts from the keystore",
        "tags": [
          "jade"
        ],
        "params": [
          {
            "name": "chain",
            "required": false,
            "description": "Chain name, by default `mainnet`, other possible variant `morden`",
            "schema": {
              "type": "string"
            }
          }, 
          {
            "name": "chain_id",
            "required": false,
            "description": "chain id number, by default for `mainnet` it equals `61`",
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "show_hidden",
            "required": false,
            "description": "Show hidden accounts",
            "schema": {
              "type": "Boolean"
            }
          }
        ],
        "result": {
          "description": "List of all not hidden accounts",
          "schema": {
            "$ref": "#/components/schemas/Accounts"
          }
        }
      },
      {
        "name": "emerald_hideAccount",
        "summary": "Hide an account from the list returned by default by `emerald_listAccounts`",
        "tags": [
          "jade"
        ],
        "params": [
          {
            "name": "address",
            "required": true,
            "description": "hex-encoded 20 bytes public address",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "chain",
            "required": false,
            "description": "chain name, by default `mainnet`, other possible variant `morden`",
            "schema": {
              "type": "string"
            }
          }, 
          {
            "name": "chain_id",
            "required": false,
            "description": "chain id number, by default for `mainnet` it equals `61`",
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "result": {
          "description": "`accept` (Boolean) - `true` if required account exists",
          "type": "boolean"
        }
      },
      {
        "name": "emerald_unhideAccount",
        "summary": "Show an account that was hidden before by the command `emerald_hideAccount`",
        "tags": [
          "jade"
        ],
        "params": [{
          "name": "address",
          "required": true,
          "description": "hex-encoded 20 bytes public address",
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "chain",
          "required": false,
          "description": "chain name, by default `mainnet`, other possible variant `morden`",
          "schema": {
            "type": "string"
          }
        }, 
        {
          "name": "chain_id",
          "required": false,
          "description": "chain id number, by default for `mainnet` it equals `61`",
          "schema": {
            "type": "integer",
            "format": "int64"
          }
        }],
        "result": {
          "description": "`accept` (Boolean) - `true` if required account exists",
          "type": "boolean"
        }
      },
      {
        "name": "emerald_newAccount",
        "summary": "Creates a new account and stores it locally as a passphrase-encoded keystore file.",
        "tags": [
          "jade"
        ],
        "params": [],
        "result": {
          "description": "",
          "type": "boolean"
        }
      },
      {
        "name": "emerald_shakeAccount",
        "summary": "Recreate account with the same public address, but with a different passphrase",
        "tags": [
          "jade"
        ],
        "params": [],
        "result": {
          "description": "",
          "type": "boolean"
        }
      },
      {
        "name": "emerald_updateAccount",
        "summary": "Update not secured by passphrase account metadata, like `name` and `description`",
        "tags": [
          "jade"
        ],
        "params": [],
        "result": {
          "description": "",
          "type": "boolean"
        }
      },
      {
        "name": "emerald_importAccount",
        "summary": "Import a new account from an external keyfile. Handle both cases: normal account & HD wallet account",
        "tags": [
          "jade"
        ],
        "params": [],
        "result": {
          "description": "",
          "type": "boolean"
        }
      },
      {
        "name": "emerald_exportAccount",
        "summary": "Returns an account keyfile associated with the account.",
        "tags": [
          "jade"
        ],
        "params": [],
        "result": {
          "description": "",
          "type": "boolean"
        }
      },
